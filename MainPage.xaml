<!--ユーザー インターフェイス定義-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPractice.MainPage">


    <!--２列２行のグリッドはこれでいい？-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 1行1列 -->
        <BoxView Color="Red" Grid.Row="0" Grid.Column="0"/>

        <!-- 1行2列 -->
        <BoxView Color="Blue" Grid.Row="0" Grid.Column="1"/>

        <!-- 2行1列 -->
        <BoxView Color="Green" Grid.Row="1" Grid.Column="0"/>

        <!-- 2行2列 -->
        <BoxView Color="Yellow" Grid.Row="1" Grid.Column="1"/>
    </Grid>

