<!--.NET MAUI アプリケーションのメイン構造-->
<!--XAMLの雰囲気からつかまないとしっくりこないかも。とりあえずまた後で-->
<Shell
    x:Class="MauiAppPractice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppPractice"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiAppPractice">

    <!--多分ContentTemplateで初期表示のページを「MauiAppPractice\MauiProgram.cs」に指定してる-->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
